<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="5dp">

        <TextView
            android:id="@+id/txtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="txtNome"
            android:textAlignment="center"
            android:textColor="#ca0101"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtEspecie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtNome"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:text="txtEspecie"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtRaca"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtEspecie"
            android:layout_below="@+id/txtEspecie"
            android:text="txtRaca" />

        <TextView
            android:id="@+id/txtPeso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtEspecie"
            android:layout_below="@+id/txtRaca"
            android:text="txtPeso" />

        <TextView
            android:id="@+id/txtNascimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtEspecie"
            android:layout_below="@+id/txtPeso"
            android:text="txtNascimento" />

        <TextView
            android:id="@+id/txtPorte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtEspecie"
            android:layout_below="@+id/txtNascimento"
            android:text="txtPorte" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
